        <ImageView
            android:id="@+id/ivMyAddressOverflow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/overflow"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </ImageView>

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"

            android:layout_marginTop="16dp"
            android:background="@color/colorGrey2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_input_layout_my_address_house_number" />

        <Button
            android:id="@+id/buttonViewHolderCancel"
            style="?android:buttonBarButtonStyle"
            android:layout_width="175dp"
            android:layout_height="46dp"
            android:text="Cancel"
            android:textColor="@color/colorGreen"
            app:layout_constraintEnd_toStartOf="@+id/view2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view" />
        <!--android:background="@drawable/my_button_3"-->

        <View
            android:id="@+id/view2"
            android:layout_width="1dp"
            android:layout_height="46dp"

            android:background="@color/colorGrey2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


        <Button
            android:id="@+id/buttonViewHolderSubmit"
            style="?android:buttonBarButtonStyle"
            android:layout_width="175dp"
            android:layout_height="46dp"
            android:text="Submit"
            android:textColor="@color/colorGreen"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/view2"
            app:layout_constraintTop_toBottomOf="@+id/view" />





    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>