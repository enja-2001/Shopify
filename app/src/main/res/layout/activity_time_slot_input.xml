<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".timeSlotInput"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

  <androidx.cardview.widget.CardView
      android:layout_width="300dp"
      android:layout_height="300dp"
      app:cardCornerRadius="30dp"
      android:elevation="30dp"
      app:cardBackgroundColor="#F4F4F4"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

      <TextView
          android:id="@+id/textView19"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="20dp"
          android:layout_marginLeft="10dp"
          android:layout_marginTop="8dp"
          android:fontFamily="@font/grand_hotel"
          android:text="Choose a time slot"
          android:textColor="@color/colorGreen"
          android:textSize="24sp"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent" />


      <Spinner
          android:id="@+id/spinner"
          android:layout_width="200dp"
          android:layout_height="42dp"
          android:background="@drawable/spinner_drawable"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintVertical_bias="0.426">

      </Spinner>

      <Button
          android:id="@+id/butProceed"
          android:layout_width="186dp"
          android:layout_height="38dp"
          android:layout_marginBottom="32dp"
          android:background="@drawable/my_button_two"
          android:text="PROCEED"
          android:textColor="@color/colorGreen"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
  </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>

